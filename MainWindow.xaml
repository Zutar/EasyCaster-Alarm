<Window x:Name="app" x:Class="EasyCaster_Alarm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyCaster_Alarm"
        mc:Ignorable="d"
        Title="EasyCaster Alarm" Height="750" Width="800" Closing="Window_Closing" Icon="/Resources/Icona.ico" MaxWidth="800">
    <Window.Resources>
        <Thickness x:Key="ControlMargin">0 5 0 0</Thickness>
        <!-- Edit button animation -->
        <Storyboard x:Key="editButtonAnimation">
            <DoubleAnimation Storyboard.TargetName="settings_edit"
                     Storyboard.TargetProperty="Opacity"
                     From="0"
                     To="1"
                     RepeatBehavior="3x"
                     AutoReverse="True"
                     Duration="0:0:0.1"/>
        </Storyboard>
        <!-- Save button animation -->
        <Storyboard x:Key="saveButtonAnimation">
            <DoubleAnimation Storyboard.TargetName="settings_save"
                     Storyboard.TargetProperty="Opacity"
                     From="0"
                     To="1"
                     RepeatBehavior="3x"
                     AutoReverse="True"
                     Duration="0:0:0.1"/>
        </Storyboard>

        <!-- Alarm blink -->
        <Storyboard x:Key="alarmBlinkAnimation" Duration="0:0:15" RepeatBehavior="Forever">
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)"
                                      Storyboard.TargetName="alarm_text"
                                      AutoReverse="True"
                                      RepeatBehavior="Forever">
                <ColorAnimationUsingKeyFrames.KeyFrames>
                    <DiscreteColorKeyFrame KeyTime="0:0:0" Value="#4F4F4F"/>
                    <DiscreteColorKeyFrame KeyTime="0:0:1" Value="Red"/>
                    <DiscreteColorKeyFrame KeyTime="0:0:2" Value="#4F4F4F"/>
                    <DiscreteColorKeyFrame KeyTime="0:0:3" Value="Red"/>
                    <DiscreteColorKeyFrame KeyTime="0:0:4" Value="#4F4F4F"/>
                    <DiscreteColorKeyFrame KeyTime="0:0:5" Value="Red"/>
                    <DiscreteColorKeyFrame KeyTime="0:0:6" Value="#4F4F4F"/>
                    <DiscreteColorKeyFrame KeyTime="0:0:7" Value="Red"/>
                    <DiscreteColorKeyFrame KeyTime="0:0:8" Value="#4F4F4F"/>
                    <DiscreteColorKeyFrame KeyTime="0:0:9" Value="Red"/>
                    <DiscreteColorKeyFrame KeyTime="0:0:10" Value="#4F4F4F"/>
                    <DiscreteColorKeyFrame KeyTime="0:0:11" Value="Red"/>
                    <DiscreteColorKeyFrame KeyTime="0:0:12" Value="#4F4F4F"/>
                    <DiscreteColorKeyFrame KeyTime="0:0:13" Value="Red"/>
                    <DiscreteColorKeyFrame KeyTime="0:0:14" Value="#4F4F4F"/>
                    <DiscreteColorKeyFrame KeyTime="0:0:15" Value="Red"/>
                </ColorAnimationUsingKeyFrames.KeyFrames>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Button style -->
        <ControlTemplate x:Key="ControlButton" TargetType="Button">
            <Border Name="border" BorderBrush="#D4D4D4" BorderThickness="1" CornerRadius="5" Background="{TemplateBinding Background}" VerticalAlignment="{TemplateBinding VerticalAlignment}" HorizontalAlignment="{TemplateBinding HorizontalAlignment}" Padding="{TemplateBinding Padding}">
                <ContentPresenter RecognizesAccessKey="True"></ContentPresenter>
            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" TargetName="border" Value="#787878"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="BorderBrush" TargetName="border" Value="#186497"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- ComboBox -->
        <Style x:Key="NewComboBox" TargetType="{x:Type ComboBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Grid.Column="2" Focusable="false" IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}" >
                                <ToggleButton.Template>
                                    <ControlTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="5*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border x:Name="Border"  Grid.ColumnSpan="2" CornerRadius="5" Background="White" BorderBrush="#D4D4D4" BorderThickness="1" />
                                            <Border Grid.Column="0" CornerRadius="5,0,0,5"  Margin="1" Background="White" />
                                            <Path x:Name="Arrow" Grid.Column="1"  Fill="#D4D4D4" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z"/>
                                        </Grid>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter Name="ContentSite" IsHitTestVisible="False"  Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" Margin="3"  />
                            <TextBox x:Name="PART_EditableTextBox" Visibility="Hidden" IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True"  Focusable="False" PopupAnimation="Slide">
                                <Grid  Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="White" CornerRadius="0, 0, 5, 5" />
                                    <ScrollViewer SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
            </Style.Triggers>
        </Style>

        <!-- TextBox style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#ffffff"/>
            <Setter Property="Foreground" Value="#FF969696"/>
            <Setter Property="BorderThickness" Setter.Value="1"/>
            <Setter Property="BorderBrush" Setter.Value="#D4D4D4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <Border Background="#ffffff" 
                                    BorderBrush="#D4D4D4" 
                                    BorderThickness="1" 
                                    CornerRadius="5" Opacity="1" Padding="2">
                                <Grid>
                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                  Foreground="#FF787878" 
                                                  Background="#ffffff"
                                                  BorderThickness="0" IsTabStop="False" 
                                                  Margin="0" Padding="{TemplateBinding Padding}"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="White" VerticalAlignment="Top" Height="Auto" HorizontalAlignment="Left" Width="785">
        <ScrollViewer x:Name="main_scroll" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Height="Auto" VerticalAlignment="Top" Padding="0" Panel.ZIndex="-1" Background="#FFF2F2F2">
            <StackPanel Height="Auto">
                <Menu HorizontalAlignment="Left" Height="25" Width="808" Margin="-4,0" Foreground="#FF1D4382" Background="#FFFCFCFC" Padding="22,3,0,0" VerticalContentAlignment="Top">
                    <MenuItem x:Name="m_about" Header="{DynamicResource m_about}" Cursor="Hand" Padding="0,0,6,0" Margin="21,0,0,0" Foreground="#4F4F4F" Click="m_about_Click"/>
                    <MenuItem x:Name="m_feedback" Header="{DynamicResource m_feedback}" Cursor="Hand" Foreground="#4F4F4F" Click="m_feedback_Click"/>
                    <MenuItem x:Name="m_help" Header="{DynamicResource m_help}" Cursor="Hand" Foreground="#4F4F4F" Click="m_help_Click"/>
                    <MenuItem x:Name="m_lang" Header="{DynamicResource m_lang}" Cursor="Hand" Foreground="#4F4F4F">
                        <MenuItem x:Name="lang_rus" Cursor="Hand" Header="RUS" VerticalAlignment="Top" HorizontalAlignment="Left" Click="lang_rus_Click"/>
                        <MenuItem x:Name="lang_ukr" Cursor="Hand" Header="UKR" VerticalAlignment="Top" HorizontalAlignment="Left" Click="lang_ukr_Click"/>
                    </MenuItem>
                </Menu>

                <TextBlock FontWeight="Bold" FontSize="18" Cursor="Hand" Margin="25,5,25,5" VerticalAlignment="Top">
                    <Hyperlink Name="ticker_link" NavigateUri="http://live-tv.net.ua/soft/easycaster" RequestNavigate="Hyperlink_RequestNavigate" Foreground="White">
                        <InlineUIContainer FontWeight="Normal" Foreground="Black">
                            <Label x:Name="ticker" VerticalAlignment="Center" Background="#FFFCFCFC" Content="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" Width="733"/>
                        </InlineUIContainer>
                </Hyperlink>
                </TextBlock>

                <StackPanel x:Name="alarm_block" Margin="25,0,25,0" Visibility="Hidden" Height="40" VerticalAlignment="Top">
                    <Border CornerRadius="5" BorderBrush="#FCFCFC" BorderThickness="1" Background="#FCFCFC" MinHeight="55" >
                        <Grid>
                            <Label x:Name="alarm_text" Foreground="#4F4F4F" FontWeight="Bold" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="{DynamicResource alarmMessage}" Height="39" VerticalAlignment="Top" />
                        </Grid>
                    </Border>
                </StackPanel>

                <StackPanel Margin="25,5,25,5" ClipToBounds="True" VerticalAlignment="Top">
                    <Border CornerRadius="5" BorderBrush="#FCFCFC" BorderThickness="1" Background="#FFFCFCFC" MinHeight="55" >
                        <DockPanel MinHeight="55" Height="Auto">
                            <DockPanel DockPanel.Dock="Top" Height="55" Margin="0,0,0.4,0">
                                <Canvas DockPanel.Dock="Top" Height="55" Margin="0,0,0.4,0" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                                    <Label x:Name="settings_title" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0,0,474,0" FontWeight="Bold" FontSize="20" Foreground="#4F4F4F" Height="55" Width="205" Canvas.Left="38" HorizontalAlignment="Left" Content="{DynamicResource settingsTitle}"/>
                                    <Border x:Name="status" Width="20" Height="20" CornerRadius="25" BorderThickness="1" Margin="48,12,1.6,8" Canvas.Left="560" Canvas.Top="2" Background="#FF4CD920" />
                                    <Button x:Name="settings_open" Width="25" Height="24" Template="{DynamicResource ControlButton}" Cursor="Hand" Click="settings_open_Click" Canvas.Left="675" Canvas.Top="12">
                                        <Button.Background>
                                            <ImageBrush x:Name="settings_open_img" ImageSource="/Resources/arrowDown.png" Stretch="Fill"/>
                                        </Button.Background>
                                    </Button>
                                </Canvas>
                            </DockPanel>
                            <Canvas x:Name="settings_block" DockPanel.Dock="Bottom" Margin="38,0,43.4,10" MinHeight="50" Height="1600" Visibility="Collapsed" Width="660">
                                <Button x:Name="settings_edit" Width="100" Height="30" Template="{DynamicResource ControlButton}" Cursor="Hand" Background="#FFEDEDED" HorizontalContentAlignment="Center" Padding="1,1,1,1" Canvas.Top="25" Click="settings_edit_Click">
                                    <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Normal" Content="{DynamicResource settingsEdit}" Margin="-1,-1,-1,-1"/>
                                </Button>
                                <Button x:Name="settings_save" Width="100" Height="30" Template="{DynamicResource ControlButton}" Cursor="Hand" Background="#FFEDEDED" HorizontalContentAlignment="Center" Padding="1,1,1,1" Canvas.Top="25" Canvas.Left="110" Click="settings_save_Click">
                                    <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Normal" Content="{DynamicResource settingsSave}" Margin="-1,-1,-1,-1"/>
                                </Button>
                                <GroupBox Header="{DynamicResource settingsConfigTitle}" Height="84" Width="261" Canvas.Left="399" Canvas.Top="-9" BorderBrush="#FFD4D4D4" FontWeight="Bold" Foreground="#4F4F4F" FontSize="14">
                                    <Grid Height="40" Margin="0,0,-2,0">
                                        <Button x:Name="settings_save_config" Width="100" Height="30" Template="{DynamicResource ControlButton}" Cursor="Hand" Background="#FFEDEDED" HorizontalContentAlignment="Center" Padding="1,1,1,1" Canvas.Top="10" Canvas.Left="303" Margin="149,5,2,5" Click="settings_save_config_Click" FontSize="14">
                                            <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Normal" Content="{DynamicResource settingsConfigSave}" FontSize="12" Margin="-1,0,-1,0" Height="26" VerticalAlignment="Center" Background="{x:Null}"/>
                                        </Button>
                                        <Button x:Name="settings_load_config" Width="100" Height="30" Template="{DynamicResource ControlButton}" Cursor="Hand" Background="#FFEDEDED" HorizontalContentAlignment="Center" Padding="1,1,1,1" Canvas.Top="10" Canvas.Left="455" Margin="0,5,151,5" Click="settings_load_config_Click">
                                            <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Normal" Content="{DynamicResource settingsConfigLoad}" FontSize="12" Margin="-1,-1,-1,-1"/>
                                        </Button>
                                    </Grid>
                                </GroupBox>
                                <StackPanel Height="90" Canvas.Top="73" Orientation="Vertical">
                                    <Label Foreground="#4F4F4F" FontWeight="Bold" Content="{DynamicResource settingsMainChannelTitle}" Padding="5,5,5,-1"/>
                                    <Grid Height="65" Width="661">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="205"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <Label Content="{DynamicResource settingsChannelLink}" Foreground="#4F4F4F" FontWeight="Bold" FontSize="10" Padding="5,5,5,2" />
                                            <TextBox x:Name="tg_channel_main_link" Height="25" TextWrapping="Wrap" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" HorizontalAlignment="Stretch" LostFocus="tg_channel_main_link_LostFocus"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1"></StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <Label Content="{DynamicResource settingsChannelName}" Foreground="#4F4F4F" FontWeight="Bold" FontSize="10" Padding="5,5,5,2" />
                                            <TextBox x:Name="tg_channel_main_name" Height="25" TextWrapping="Wrap" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" HorizontalAlignment="Stretch" LostFocus="tg_channel_main_name_LostFocus"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                                <StackPanel Height="71" Width="660" Canvas.Top="138" Orientation="Vertical">
                                    <Label Foreground="#4F4F4F" FontWeight="Bold" Content="{DynamicResource settingsTestChannelTitle}" Padding="5,5,5,-1"/>
                                    <Grid Height="65">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="205"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <Label Content="{DynamicResource settingsChannelLink}" Foreground="#4F4F4F" FontWeight="Bold" FontSize="10" Padding="5,5,5,2" />
                                            <TextBox x:Name="tg_channel_test_link" Height="25" TextWrapping="Wrap" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" HorizontalAlignment="Stretch" LostFocus="tg_channel_test_link_LostFocus"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1"></StackPanel>
                                        <StackPanel  Grid.Column="2">
                                            <Label Content="{DynamicResource settingsChannelName}" Foreground="#4F4F4F" FontWeight="Bold" FontSize="10" Padding="5,5,5,2" />
                                            <TextBox x:Name="tg_channel_test_name" Height="25" TextWrapping="Wrap" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" HorizontalAlignment="Stretch" LostFocus="tg_channel_test_name_LostFocus"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>

                                <CheckBox x:Name="app_autostart" Canvas.Top="217" Content="{DynamicResource settingsAutostart}" IsEnabled="False" Click="app_autostart_Click" />
                                <Button x:Name="app_logout" Width="200" Template="{DynamicResource ControlButton}" Cursor="Hand" Grid.Column="1" Margin="153,9,153,15" Canvas.Left="307" Canvas.Top="200" Click="app_logout_Click" Padding="1,1,1,1" IsEnabled="False" Background="#FFEDEDED" BorderBrush="#D4D4D4">
                                    <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" Content="{DynamicResource settingsAppLogout}" Margin="-1,0,-1,0" Foreground="#4F4F4F" Padding="0,0,0,0" Height="24" Background="{x:Null}"/>
                                </Button>
                                <StackPanel Height="430" Width="660" Canvas.Top="370" Orientation="Vertical">
                                    <Label Foreground="#4F4F4F" FontWeight="Bold" Content="{DynamicResource settingsKeyTitle}" Padding="5,5,5,-2"/>
                                    <Grid Height="45" Margin="0,20,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="165"/>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="175"/>
                                            <ColumnDefinition Width="30"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                            <Label Content="{DynamicResource settingsKeyTitle1}" Foreground="#4F4F4F" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <TextBox x:Name="action_key_phrase_1" Height="25" TextWrapping="Wrap" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" LostFocus="action_key_phrase_1_LostFocus"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Margin="5,0,5,0">
                                            <Label Content="{DynamicResource settingsKeyApp1}" Foreground="#4F4F4F" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <ComboBox x:Name="action_app_list_1" Style="{DynamicResource NewComboBox}" Canvas.Top="27" Canvas.Left="26" Height="25" Foreground="#FF282828" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" IsEnabled="False" LostFocus="action_app_list_1_LostFocus" Background="{x:Null}" BorderBrush="{x:Null}" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="2" Margin="5,0,5,0">
                                            <Label Content="{DynamicResource settingsKeyLabel1}" Foreground="#4F4F4F" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <TextBox x:Name="action_key_press_1" Height="25" TextWrapping="Wrap" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" KeyUp="action_key_press_1_KeyUp" IsEnabled="False" LostFocus="action_key_press_1_LostFocus">
                                                <TextBox.ToolTip>
                                                    <ToolTip Content="{DynamicResource settingsKeyTip}"></ToolTip>
                                                </TextBox.ToolTip>
                                            </TextBox>
                                        </StackPanel>
                                        <StackPanel Grid.Column="3" Margin="5,0,5,0">
                                            <Label Content="{DynamicResource settingsAppLabel1}" Foreground="#4F4F4F" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <TextBox x:Name="action_key_ext_app_1" Height="25" TextWrapping="Wrap" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" GotFocus="action_key_ext_app_1_GotFocus">
                                                <TextBox.ToolTip>
                                                    <ToolTip Content="{DynamicResource settingsExtAppTip}"></ToolTip>
                                                </TextBox.ToolTip>
                                            </TextBox>
                                        </StackPanel>
                                        <Button x:Name="action_key_test_1" Grid.Column="4" Width="25" Height="24" Template="{DynamicResource ControlButton}" Cursor="Hand" Click="action_key_test_1_Click" Margin="5,10,0,0" Background="#FFEDEDED">
                                            <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" Content="T" FontSize="14" Margin="-1,-1,-1,-1" Foreground="#4F4F4F" Padding="0,0,1,0"/>
                                        </Button>
                                    </Grid>
                                    <Grid Height="45" Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="165"/>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="175"/>
                                            <ColumnDefinition Width="30"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                            <Label Content="{DynamicResource settingsKeyTitle2}" Foreground="#4F4F4F" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <TextBox x:Name="action_key_phrase_2" Height="25" TextWrapping="Wrap" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" LostFocus="action_key_phrase_2_LostFocus"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Margin="5,0,5,0">
                                            <Label Content="{DynamicResource settingsKeyApp2}" Foreground="#4F4F4F" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <ComboBox x:Name="action_app_list_2" Style="{DynamicResource NewComboBox}" Canvas.Top="27" Canvas.Left="26" Height="25" Foreground="#FF282828" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" IsEnabled="False" LostFocus="action_app_list_2_LostFocus" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="2" Margin="5,0,5,0">
                                            <Label Content="{DynamicResource settingsKeyLabel2}" Foreground="#4F4F4F" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <TextBox x:Name="action_key_press_2" Height="25" TextWrapping="Wrap" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" KeyUp="action_key_press_2_KeyUp" IsEnabled="False" LostFocus="action_key_press_2_LostFocus">
                                                <TextBox.ToolTip>
                                                    <ToolTip Content="{DynamicResource settingsKeyTip}"></ToolTip>
                                                </TextBox.ToolTip>
                                            </TextBox>
                                        </StackPanel>
                                        <StackPanel Grid.Column="3" Margin="5,0,5,0">
                                            <Label Content="{DynamicResource settingsAppLabel2}" Foreground="#4F4F4F" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <TextBox x:Name="action_key_ext_app_2" Height="25" TextWrapping="Wrap" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" GotFocus="action_key_ext_app_2_GotFocus">
                                                <TextBox.ToolTip>
                                                    <ToolTip Content="{DynamicResource settingsExtAppTip}"></ToolTip>
                                                </TextBox.ToolTip>
                                            </TextBox>
                                        </StackPanel>
                                        <Button x:Name="action_key_test_2" Grid.Column="4" Width="25" Height="24" Template="{DynamicResource ControlButton}" Cursor="Hand" Click="action_key_test_2_Click" Margin="5,10,0,0" Background="#FFEDEDED">
                                            <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" Content="T" FontSize="14" Margin="-1,-1,-1,-1" Foreground="#4F4F4F" Padding="0,0,1,0"/>
                                        </Button>
                                    </Grid>
                                    <Grid Height="45" Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="165"/>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="175"/>
                                            <ColumnDefinition Width="30"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                            <Label Content="{DynamicResource settingsKeyTitle3}" Foreground="#4F4F4F" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <TextBox x:Name="action_key_phrase_3" Height="25" TextWrapping="Wrap" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" LostFocus="action_key_phrase_3_LostFocus"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Margin="5,0,5,0">
                                            <Label Content="{DynamicResource settingsKeyApp3}" Foreground="#4F4F4F" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <ComboBox x:Name="action_app_list_3" Style="{DynamicResource NewComboBox}" Canvas.Top="27" Canvas.Left="26" Height="25" Foreground="#FF282828" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" IsEnabled="False" LostFocus="action_app_list_3_LostFocus" />
