                                        </Button>
                                        <StackPanel Margin="64,0,191,5" Grid.Column="1">
                                            <Label Content="{DynamicResource settingsKeyLabel2}" Foreground="#FF464646" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <TextBox x:Name="action_key_press_2" Height="25" TextWrapping="Wrap" Width="175" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" KeyUp="action_key_press_2_KeyUp" LostFocus="action_key_press_2_LostFocus" HorizontalAlignment="Left"/>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Height="45">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="129*"/>
                                            <ColumnDefinition Width="431*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Width="175" Margin="0,0,385,4" Grid.ColumnSpan="2">
                                            <Label Content="{DynamicResource settingsKeyTitle3}" Foreground="#FF464646" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <TextBox x:Name="action_key_phrase_3" Height="25" TextWrapping="Wrap" Width="175" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" LostFocus="action_key_phrase_3_LostFocus"/>
                                        </StackPanel>
                                        <StackPanel Margin="258,0,0,5" Grid.Column="1">
                                            <Label Content="{DynamicResource settingsKeyApp3}" Foreground="#FF464646" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <ComboBox x:Name="action_app_list_3" Width="140" Style="{DynamicResource NewComboBox}" Canvas.Top="27" Canvas.Left="26" Height="25" Foreground="#FF282828" HorizontalContentAlignment="Stretch" HorizontalAlignment="Left" IsEnabled="False" LostFocus="action_app_list_3_LostFocus" />
                                        </StackPanel>
                                        <Button x:Name="action_key_test_3" Width="25" Height="24" Template="{DynamicResource ControlButton}" Cursor="Hand" Grid.Column="1" Margin="406,15,0,6" Click="action_key_test_3_Click">
                                            <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" Content="T" FontSize="14" Margin="-1,-1,-1,-1" Foreground="#FF464646" Padding="0,0,1,0"/>
                                        </Button>
                                        <StackPanel Margin="64,0,167,5" Grid.Column="1">
                                            <Label Content="{DynamicResource settingsKeyLabel3}" Foreground="#FF464646" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <TextBox x:Name="action_key_press_3" Height="25" TextWrapping="Wrap" Width="175" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" KeyUp="action_key_press_3_KeyUp" LostFocus="action_key_press_3_LostFocus" HorizontalAlignment="Left"/>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Height="45">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="129*"/>
                                            <ColumnDefinition Width="431*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Width="175" Margin="0,0,385,5" Grid.ColumnSpan="2">
                                            <Label Content="{DynamicResource settingsKeyTitle4}" Foreground="#FF464646" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <TextBox x:Name="action_key_phrase_4" Height="25" TextWrapping="Wrap" Width="175" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" LostFocus="action_key_phrase_4_LostFocus"/>
                                        </StackPanel>
                                        <StackPanel Margin="258,0,0,5" Grid.Column="1">
                                            <Label Content="{DynamicResource settingsKeyApp4}" Foreground="#FF464646" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <ComboBox x:Name="action_app_list_4" Width="140" Style="{DynamicResource NewComboBox}" Canvas.Top="27" Canvas.Left="26" Height="25" Foreground="#FF282828" HorizontalContentAlignment="Stretch" HorizontalAlignment="Left" IsEnabled="False" LostFocus="action_app_list_4_LostFocus" />
                                        </StackPanel>
                                        <Button x:Name="action_key_test_4" Width="25" Height="24" Template="{DynamicResource ControlButton}" Cursor="Hand" Grid.Column="1" Margin="406,15,0,6" Click="action_key_test_4_Click">
                                            <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" Content="T" FontSize="14" Margin="-1,-1,-1,-1" Foreground="#FF464646" Padding="0,0,1,0"/>
                                        </Button>
                                        <StackPanel Margin="64,0,167,5" Grid.Column="1" HorizontalAlignment="Left">
