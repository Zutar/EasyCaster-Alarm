                                            <ImageBrush x:Name="settings_open_img" ImageSource="/Resources/arrowDown.png" Stretch="Fill"/>
                                        </Button.Background>
                                    </Button>
                                </Canvas>
                            </DockPanel>
                            <Canvas x:Name="settings_block" DockPanel.Dock="Bottom" Margin="38,0,43.4,10" MinHeight="50" Height="667" Visibility="Visible" Width="560">
