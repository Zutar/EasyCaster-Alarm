                                    <Border x:Name="status" Width="30" Height="30" CornerRadius="25" BorderThickness="1" Margin="48,7,1.6,8" Canvas.Left="460" Canvas.Top="2" Background="#FF4CD920" />
                                    <Button x:Name="settings_open" Width="25" Height="24" Template="{DynamicResource ControlButton}" Cursor="Hand" Click="settings_open_Click" Canvas.Left="575" Canvas.Top="12">
