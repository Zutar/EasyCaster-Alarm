                                        <StackPanel Margin="265,0,0,10">
                                            <Label Content="{DynamicResource settingsChannelLink}" Foreground="#FF464646" FontWeight="Bold" FontSize="10" Padding="5,5,5,2" />
                                            <TextBox x:Name="tg_channel_main_link" Height="25" TextWrapping="Wrap" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" HorizontalAlignment="Left" Width="290" LostFocus="tg_channel_main_link_LostFocus"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                                <StackPanel Height="90" Width="560" Canvas.Top="138" Orientation="Vertical">
                                    <Label Foreground="#FF464646" FontWeight="Bold" Content="{DynamicResource settingsTestChannelTitle}" Padding="5,5,5,-1"/>
                                    <Grid Height="65">
                                        <StackPanel Width="250" Margin="0,0,310,10">
                                            <Label Content="{DynamicResource settingsChannelName}" Foreground="#FF464646" FontWeight="Bold" FontSize="10" Padding="5,5,5,2" />
                                            <TextBox x:Name="tg_channel_test_name" Height="25" TextWrapping="Wrap" Width="210" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" HorizontalAlignment="Left" LostFocus="tg_channel_test_name_LostFocus"/>
                                        </StackPanel>
                                        <StackPanel Margin="270,0,0,10">
                                            <Label Content="{DynamicResource settingsChannelLink}" Foreground="#FF464646" FontWeight="Bold" FontSize="10" Padding="5,5,5,2" />
                                            <TextBox x:Name="tg_channel_test_link" Height="25" TextWrapping="Wrap" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" HorizontalAlignment="Left" Width="290" LostFocus="tg_channel_test_link_LostFocus"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>

                                <CheckBox x:Name="app_autostart" Canvas.Top="217" Checked="app_autostart_Checked" Content="{DynamicResource settingsAutostart}" IsEnabled="False" Click="app_autostart_Click" />
                                <Button x:Name="app_logout" Width="200" Template="{DynamicResource ControlButton}" Cursor="Hand" Grid.Column="1" Margin="53,9,153,15" Canvas.Left="307" Canvas.Top="200" Click="app_logout_Click" Padding="1,1,1,1">
                                    <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" Content="{DynamicResource settingsAppLogout}" FontSize="14" Margin="-1,0,-1,0" Foreground="#FF464646" Padding="0,0,0,0" Height="24"/>
                                </Button>
                                <StackPanel Height="270" Width="560" Canvas.Top="263" Orientation="Vertical">
                                    <Label Foreground="#FF464646" FontWeight="Bold" Content="{DynamicResource settingsKeyTitle}" Padding="5,5,5,-2"/>
                                    <Grid Height="45" Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="129*"/>
                                            <ColumnDefinition Width="431*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Width="175" Margin="0,0,385,0" Grid.ColumnSpan="2">
                                            <Label Content="{DynamicResource settingsKeyTitle1}" Foreground="#FF464646" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <TextBox x:Name="action_key_phrase_1" Height="25" TextWrapping="Wrap" Width="175" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" LostFocus="action_key_phrase_1_LostFocus"/>
                                        </StackPanel>
                                        <StackPanel Margin="258,0,33,0" Grid.Column="1">
                                            <Label Content="{DynamicResource settingsKeyApp1}" Foreground="#FF464646" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <ComboBox x:Name="action_app_list_1" Width="140" Style="{DynamicResource NewComboBox}" Canvas.Top="27" Canvas.Left="26" Height="25" Foreground="#FF282828" HorizontalContentAlignment="Stretch" HorizontalAlignment="Left" IsEnabled="False" LostFocus="action_app_list_1_LostFocus" />
                                        </StackPanel>
                                        <Button x:Name="action_key_test_1" Width="25" Height="24" Template="{DynamicResource ControlButton}" Cursor="Hand" Grid.Column="1" Margin="406,15,0,6" Click="action_key_test_1_Click">
                                            <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" Content="T" FontSize="14" Margin="-1,-1,-1,-1" Foreground="#FF464646" Padding="0,0,1,0"/>
                                        </Button>
                                        <StackPanel Margin="64,0,167,0" Grid.Column="1" HorizontalAlignment="Left">
                                            <Label Content="{DynamicResource settingsKeyLabel1}" Foreground="#FF464646" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <TextBox x:Name="action_key_press_1" Height="25" TextWrapping="Wrap" Width="175" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" KeyUp="action_key_press_1_KeyUp" IsEnabled="False" LostFocus="action_key_press_1_LostFocus"/>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Height="45">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="129*"/>
                                            <ColumnDefinition Width="431*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Width="175" Margin="0,0,385,5" Grid.ColumnSpan="2">
                                            <Label Content="{DynamicResource settingsKeyTitle2}" Foreground="#FF464646" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <TextBox x:Name="action_key_phrase_2" Height="25" TextWrapping="Wrap" Width="175" Background="#FFBEC6DB" BorderBrush="#FFBEC6DB" Foreground="#FF787878" FontSize="14" FontFamily="Global Sans Serif" Padding="0,2,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" LostFocus="action_key_phrase_2_LostFocus"/>
                                        </StackPanel>
                                        <StackPanel Margin="258,0,0,5" Grid.Column="1">
                                            <Label Content="{DynamicResource settingsKeyApp2}" Foreground="#FF464646" FontWeight="Bold" FontSize="10" Padding="5,0,5,2" />
                                            <ComboBox x:Name="action_app_list_2" Width="140" Style="{DynamicResource NewComboBox}" Canvas.Top="27" Canvas.Left="26" Height="25" Foreground="#FF282828" HorizontalContentAlignment="Stretch" HorizontalAlignment="Left" IsEnabled="False" LostFocus="action_app_list_2_LostFocus" />
                                        </StackPanel>
                                        <Button x:Name="action_key_test_2" Width="25" Height="24" Template="{DynamicResource ControlButton}" Cursor="Hand" Grid.Column="1" Margin="406,15,0,6" Click="action_key_test_2_Click">
