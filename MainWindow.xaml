                                        <Button x:Name="settings_load_config" Width="100" Height="30" Template="{DynamicResource ControlButton}" Cursor="Hand" Background="#FFF0F0F0" HorizontalContentAlignment="Center" Padding="1,1,1,1" Canvas.Top="10" Canvas.Left="455" Margin="0,5,151,5" Click="settings_load_config_Click">
                                            <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Normal" Content="{DynamicResource settingsConfigLoad}" FontSize="11" Margin="-1,-1,-1,-1"/>
                                        </Button>
                                    </Grid>
                                </GroupBox>
                                <StackPanel Height="90" Width="560" Canvas.Top="73" Orientation="Vertical">
                                    <Label Foreground="#FF464646" FontWeight="Bold" Content="{DynamicResource settingsMainChannelTitle}" Padding="5,5,5,-1"/>
                                    <Grid Height="65">
                                        <StackPanel Width="250" Margin="0,0,310,10">
